<div class="d-flex justify-content-between mt-3">
	<h2>Liste des courtiers</h2>
	<a classasp-all-route-data="mr-2"-controller="Broker" asp-action="Add" style="text-decoration:none"><h6><i class="bi bi-plus-lg"></i>Nouveau courtier</h6></a>
</div>

<table class="table mt-2" style="width:100%">
	<thead>
		<tr>
			<th>Identité</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach( var broker in Model)
		{
			<tr>
				<td> <i class="bi bi-person-fill"></i>   @broker.Lastname @broker.Firstname</td>
				<td><a class="btn btn-primary" asp-controller="Broker" asp-action="Details" asp-route-id="@broker.IdBroker">Details</a></td>
				<td><a class="btn btn-primary" asp-controller="Broker" asp-action="Edit" asp-route-id="@broker.IdBroker">Modifier</a></td>
			</tr>
		}
	</tbody>
</table>