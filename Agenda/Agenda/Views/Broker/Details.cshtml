@model Broker
@{
	ViewData["Title"] = "Informations Courtier";
}


<table class="table">
	<thead>
		<th>Informations :</th>
		<th></th>
	</thead>
	<tbody>
		<tr>
			<th>Nom</th><td>@Model.Lastname</td>
		</tr>
		<tr><th>Prénom</th><td>@Model.Firstname</td></tr>
		<tr><th><i class="bi bi-at"></i> Email</th><td>@Model.Mail</td></tr>
		<tr><th><i class="bi bi-telephone-fill"></i> Téléphone</th><td>@Model.PhoneNumber</td></tr>
	</tbody>
</table>
    <div>
        <a class="btn btn-primary" asp-controller="Broker" asp-action="Edit" asp-route-id="@Model.IdBroker">Modifier</a>
        <a class="btn btn-primary" asp-controller="Broker" asp-action="Index">Retour</a>
    </div>
